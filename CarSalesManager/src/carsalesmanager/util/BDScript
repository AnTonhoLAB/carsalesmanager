select * from car;
select * from car_type;

select *
from model as m
join manufacturer as a on m.id_manufacturer = a.id_manufacturer
where a.name = "Honda";

select * 
from car as c
join car_type as t on c.id_car_type = t.id_car_type
where t.name = "Passeio" ;



